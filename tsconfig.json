{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "rootDirs": ["./src"],
    "typeRoots": ["node_modules/@types"],
    "declaration": false,
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
  },
  "ts-node": { "require": ["tsconfig-paths/register"] }
}